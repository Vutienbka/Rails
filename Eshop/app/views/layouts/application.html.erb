<!DOCTYPE html>
<html>
<head>
  <title>EShop</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body id="store">
<div id="banner">
  <%#= image_tag("logo.png") %>
  <%= @page_title || "E SHOP" %>

  <nav class="navbar">
    </button>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav" style="list-style: none; font-size: 20px">
        <li class="nav-item active">
          <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <%= link_to 'My orders', orders_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'My Carts', carts_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'Product list', products_path %>
        </li>
        <li class="nav-item">

        </li>
      </ul>
    </div>
  </nav>
</div>
