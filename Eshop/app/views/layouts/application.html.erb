      ể nên sẽ tương đương với carts/cart_id -->
<!--      <div style=" display:none ">-->
        <%#= render current_cart %>
<!--      </div>-->
    </div>
    <a href="#">Home</a><br />
    <a href="#">FAQ</a><br />
