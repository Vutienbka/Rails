<div class = "row">
  <div class = "col-xs-12">
    <%= form_for(@order, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class = "form-group">
        <div class = "control-label col-sm-2" >
          <%= f.label :buyerName %>
        </div>
        <div class = "col-sm-8">
          <%= f.text_field :buyerName, class: "form-control", placeholder:"Buyer Name", autofocus: true %>
        </div>
      </div>
      <div class = "form-group">
        <div class = "control-label col-sm-2" >
          <%= f.label :address %>
        </div>
        <div class = "col-sm-8">
          <%= f.text_field :address, class: "form-control", placeholder:"Address", autofocus: true %>
        </div>
      </div>

      <div class = "form-group">
        <div class = "control-label col-sm-2" >
          <%= f.label :email%>
        </div>
        <div class = "col-sm-8">
          <%= f.text_field :email, class: "form-control", placeholder:"Email", autofocus: true %>
        </div>
      </div>

      <div class = "form-group">
        <div class = "control-label col-sm-2" >
          <%= f.label :pay_type %>
        </div>

        <div class = "col-sm-8" >
          <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: 'Select a payment method'%>
        </div>
      </div>

      <div class = "form-group">
        <div class = "actions col-sm-offset-2 col-sm-10">
          <%= f.submit "Create Order",  class: "btn btn-success" %>
        </div>
      </div>

      <div class = "form-group" >
        <div class = "control-label col-sm-2" style="font-weight: bold">
          <%= link_to 'Back', products_path%>
        </div>
      </div>
    <% end %>
  </div>
</div>



